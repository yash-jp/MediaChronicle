<h1 class="text-center">Edit Idea</h1>

<div class="card card-body">
  <h3>Media Ideas</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" value="{{idea.title}}">
    </div>

    <div class="form-group">
      <label for="deatails">Details</label>
      <textarea class="form-control" type="text" name="details">{{idea.details}}</textarea>
    </div>
  <input type="submit" class="btn btn-md btn-dark" value="Submit">
  </form>
</div>